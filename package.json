{
    "name": "log-viewer",
    "version": "1.0.0",
    "description": "An Electron application with Vue 3 and Vuetify",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "start": "npm run build && electron .",
        "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "test:socket": "node Test/test-socket-client.js"
    },
    "keywords": [
        "electron",
        "vue3",
        "vuetify",
        "desktop-app"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.5.0",
        "concurrently": "^8.2.2",
        "electron": "^27.1.3",
        "electron-builder": "^24.6.4",
        "socket.io-client": "^4.8.1",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "@mdi/font": "^7.3.67",
        "pinia": "^3.0.3",
        "socket.io": "^4.8.1",
        "vue": "^3.3.8",
        "vuetify": "^3.4.7"
    },
    "build": {
        "appId": "com.example.log-viewer",
        "productName": "Log Viewer",
        "directories": {
            "output": "dist-electron"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}